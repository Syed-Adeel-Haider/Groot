<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rl1"
    android:background="@color/Green"
    android:orientation="vertical"
    tools:context=".signup0">

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:layout_alignParentTop="true"
        android:background="@color/Green"
        android:src="@drawable/lgrootmodi"
        tools:ignore="ContentDescription">
    </ImageView>
    <LinearLayout
        android:id="@+id/lv1"
        android:layout_width="match_parent"
        android:layout_height="20sp"
        android:background="@color/Brown"
        android:layout_below="@id/imageView1"
        android:orientation="horizontal">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Welcome complete your registration in some easy steps click next!"
            android:textColor="@color/white"
            android:textSize="11.5sp"
            android:textAlignment="center"
            android:textStyle="bold"
            tools:ignore="HardcodedText" />
    </LinearLayout>

    <Button
        android:id="@+id/button1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/lv1"
        android:layout_centerInParent="true"
        android:layout_marginTop="50dp"
        android:backgroundTint="#B90A5118"
        android:shadowColor="@color/Brown"
        android:text="Next"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textColorHighlight="@color/Brown"
        android:textSize="20sp"
        android:textStyle="bold"
        tools:ignore="HardcodedText" />
    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="I already have an account."
        android:textStyle="bold"
        android:layout_marginBottom="20dp"
        android:layout_alignParentBottom="true"
        android:textColor="@color/white"
        android:layout_centerInParent="true"
        android:clickable="true"
        tools:ignore="HardcodedText,RtlHardcoded"
        android:focusable="true" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button1"
        android:layout_centerInParent="true"
        android:layout_marginTop="40dp"
        android:text="_____________OR_____________"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="18sp"
        tools:ignore="HardcodedText" />
    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="35dp"
        android:src="@drawable/gmail"
        android:layout_below="@+id/textView3"
        android:layout_marginStart="55dp"
        tools:ignore="ContentDescription" />
    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/fb"
        android:layout_marginTop="35dp"
        android:layout_below="@+id/textView3"
        android:layout_marginStart="150dp"
        tools:ignore="ContentDescription" />
    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="35dp"
        android:src="@drawable/twiter"
        android:layout_below="@+id/textView3"
        android:layout_marginStart="250dp"
        tools:ignore="ContentDescription" />
</RelativeLayout>